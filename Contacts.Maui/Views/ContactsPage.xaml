<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contacts.Maui.Views.ContactsPage"
             Title="Contacts">
    <!--
    <VerticalStackLayout Spacing="5">
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button x:Name="BtnAddContact" Clicked="BtnAddContact_OnClicked" Text="Add Contact"></Button>

        <Button x:Name="BtnEditContact" Clicked="BtnEditContact_OnClicked" Text="Edit Contact"></Button>

    </VerticalStackLayout>
    -->



    <Grid RowDefinitions="50, 20, *, 50"
          ColumnDefinitions="*"
          Padding="10">
        <SearchBar
            x:Name="SearchBar"
            Grid.Row="0"
            Grid.Column="0"
            Placeholder="Search Contact"
            TextChanged="SearchBar_TextChanged"
            >

        </SearchBar>
        <ListView 
            Grid.Row="2"
            Grid.Column="0"
            x:Name="listContacts" 
            BackgroundColor="Transparent"
            SeparatorColor="Silver"
            RowHeight="60"
            ItemSelected="ListContacts_OnItemSelected"
            ItemTapped="ListContacts_OnItemTapped"
              >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}"
                          Detail="{Binding Email}">
                        <TextCell.ContextActions>
                            <MenuItem 
                                Text="Delete" 
                                IsDestructive="True"
                                Clicked="Delete_OnClicked"
                                CommandParameter="{Binding .}"></MenuItem>
                        </TextCell.ContextActions>
                    </TextCell>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>

        <Button Grid.Row="3"
                Grid.Column="0"
                x:Name="btnAdd" 
                Text="Add Contact"
                Clicked="BtnAdd_OnClicked"
                ></Button>
    </Grid>


</ContentPage>